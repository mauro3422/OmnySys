    },
    "globalStyles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "selector": {
            "type": "string",
            "description": "Global CSS selector"
          },
          "cssProperties": {
            "type": "object",
            "patternProperties": {
              ".*": {
                "type": "string",
                "description": "CSS property and its value"
              }
            },
            "description": "Global selector CSS properties"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confianza en el estilo global"
          }
        },
        "required": ["selector", "cssProperties", "confidence"],
        "additionalProperties": false
      },
      "description": "Estilos globales CSS-in-JS detectados"
    },
    "cssVariables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "CSS variable name"
          },
          "value": {
            "type": "string",
            "description": "CSS variable value"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confianza en la variable CSS"
          }
        },
        "required": ["name", "value", "confidence"],
        "additionalProperties": false
      },
      "description": "Variables CSS detectadas"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confianza general del an치lisis"
