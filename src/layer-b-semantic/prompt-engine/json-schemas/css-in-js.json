    "cssInJS": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "componentName": {
            "type": "string",
            "description": "CSS-in-JS component name"
          },
          "cssProperties": {
            "type": "object",
            "patternProperties": {
              ".*": {
                "type": "string",
                "description": "CSS property and its value"
              }
            },
            "description": "Component CSS properties"
          },
          "framework": {
            "type": "string",
            "enum": ["styled-components", "emotion", "emotion-css", "css-in-js"],
            "description": "Used CSS-in-JS framework"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confianza en la detecci칩n"
          }
        },
        "required": ["componentName", "cssProperties", "framework", "confidence"],
        "additionalProperties": false
