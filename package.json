{
  "name": "omnysys",
  "version": "0.5.3",
  "description": "Motor de Contexto Multi-Capa para IAs - Previene visión de túnel al editar código",
  "main": "src/cli/index.js",
  "bin": {
    "omnysys": "src/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "analyze": "node src/cli/index.js analyze",
    "dev": "node src/cli/index.js",
    "orchestrator": "node scripts/start-orchestrator.js",
    "orchestrator:stop": "echo 'Use Ctrl+C to stop orchestrator'",
    "orchestrator:status": "curl http://localhost:9999/health 2>/dev/null || echo 'Orchestrator not running'",
    "mcp:start": "node start-mcp.js",
    "mcp:status": "node -e \"import('./src/layer-c-memory/mcp/core/server-class.js').then(async m => { const s = new m.OmnySysMCPServer('.'); await s.initialize(); const status = s.getStats(); console.log('MCP Server:', status.initialized ? '✅ Running' : '❌ Not running'); console.log('Files:', status.metadata.totalFiles || '0'); }).catch(e => console.error('Error:', e.message))\"",
    "smoke": "node tests/smoke-test.js",
    "build": "echo \"No build step needed for now\"",
    "lint": "echo \"No linter configured yet\""
  },
  "keywords": [
    "ai",
    "code-analysis",
    "dependency-graph",
    "mcp",
    "static-analysis",
    "semantic-analysis",
    "developer-tools",
    "context-engine"
  ],
  "author": "mauro3422",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "optionalDependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "better-sqlite3": "^9.2.0",
    "ollama": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauro3422/OmnySys.git"
  },
  "bugs": {
    "url": "https://github.com/mauro3422/OmnySys/issues"
  },
  "homepage": "https://github.com/mauro3422/OmnySys#readme"
}
